{
  "name": "jvs-code-assistant",
  "displayName": "jvs-code-assistant",
  "description": "",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jvs-code-assistant.extract.toCurrentModule",
    "onCommand:jvs-code-assistant.extract.toTargetModule",
    "onCommand:jvs-code-assistant.clean.sortGlobalStatementsInModule",
    "onCommand:jvs-code-assistant.generate.newFunctionComponentInFolder",
    "onCommand:jvs-code-assistant.generate.newFunctionComponentInModule"
  ],
  "main": "./bundle/main.js",
  "contributes": {
    "commands": [
      {
        "command": "jvs-code-assistant.extract.toCurrentModule",
        "title": "Extract To Current Module"
      },
      {
        "command": "jvs-code-assistant.extract.toTargetModule",
        "title": "Extract To Target Module"
      },
      {
        "command": "jvs-code-assistant.clean.sortGlobalStatementsInModule",
        "title": "Clean By Sort Global Statements"
      },
      {
        "command": "jvs-code-assistant.generate.newFunctionComponentInFolder",
        "title": "Generate New Function Component In Folder"
      },
      {
        "command": "jvs-code-assistant.generate.newFunctionComponentInModule",
        "title": "Generate New Function Component In Module"
      }
    ],
    "configuration": {
      "title": "jvs code assistant",
      "properties": {
        "jvs-code-assistant.src": {
          "type": "string",
          "default": ".",
          "description": "path of source folder relatived from root path."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "pack": "vsce package --out=dist --no-yarn",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=bundle/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.15.9",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0"
  },
  "dependencies": {
    "@fe-doctor/core": "^0.1.1",
    "@hemyn/utils-node": "^0.4.1",
    "typescript": "^4.7.4"
  },
  "publisher": "Foreinyel",
  "repository": "https://github.com/Foreinyel/code-assistant"
}
